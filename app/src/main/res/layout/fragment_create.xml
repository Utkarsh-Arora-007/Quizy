<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CreateFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/maincolor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:elevation="5dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/create_progresscircle"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/create_backbtn"
                />
            <TextView
                android:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Quiz"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="@id/create_backbtn"
                app:layout_constraintBottom_toBottomOf="@id/create_backbtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/fragment_title"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter quiz name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/quiz_name_txt"
                app:layout_constraintTop_toBottomOf="@id/create_backbtn"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quiz Name"
                app:layout_constraintTop_toBottomOf="@+id/quiz_name_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_name_input_edittext"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Number Of Questions."
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="220dp"
                android:id="@+id/quiz_numberofquestion_txt"
                app:layout_constraintTop_toBottomOf="@id/outlinedTextField"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextField2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Number"
                app:layout_constraintTop_toBottomOf="@+id/quiz_numberofquestion_txt"
                app:layout_constraintLeft_toLeftOf="@id/quiz_numberofquestion_txt"
                app:layout_constraintRight_toRightOf="@id/quiz_numberofquestion_txt"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_numberofquestion_input_edittext"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durations ( in mins )"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxWidth="200dp"
                android:id="@+id/quiz_duration_txt"
                app:layout_constraintTop_toTopOf="@id/quiz_numberofquestion_txt"
                app:layout_constraintBottom_toBottomOf="@id/quiz_numberofquestion_txt"
                app:layout_constraintLeft_toRightOf="@id/quiz_numberofquestion_txt"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextField3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ex. 10 mins"
                app:layout_constraintTop_toBottomOf="@+id/quiz_duration_txt"
                app:layout_constraintLeft_toLeftOf="@id/quiz_duration_txt"
                app:layout_constraintRight_toRightOf="@id/quiz_duration_txt"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quiz_duration_input_edittext"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Date and Time"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/fromtxt"
                app:layout_constraintTop_toBottomOf="@id/outlinedTextField2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textStyle="bold"
                android:textColor="@color/mygrey"
                android:textSize="16sp"
                android:id="@+id/fromDatetxt"
                app:layout_constraintTop_toBottomOf="@id/fromtxt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/fromDatetxt"
                app:layout_constraintBottom_toBottomOf="@+id/fromDatetxt"
                app:layout_constraintLeft_toRightOf="@+id/fromDatetxt"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                android:padding="5dp"
                android:id="@+id/fromdatebtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textStyle="bold"
                android:textColor="@color/mygrey"
                android:textSize="16sp"
                android:id="@+id/fromTimetxt"
                app:layout_constraintTop_toBottomOf="@id/fromtxt"
                app:layout_constraintLeft_toRightOf="@+id/fromdatebtn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/fromTimetxt"
                app:layout_constraintBottom_toBottomOf="@+id/fromTimetxt"
                app:layout_constraintLeft_toRightOf="@+id/fromTimetxt"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_time_24"
                android:padding="5dp"
                android:id="@+id/fromTimeBtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Date and Time"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/totxt"
                app:layout_constraintTop_toBottomOf="@id/fromDatetxt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textStyle="bold"
                android:textColor="@color/mygrey"
                android:textSize="16sp"
                android:id="@+id/toDatetxt"
                app:layout_constraintTop_toBottomOf="@id/totxt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/toDatetxt"
                app:layout_constraintBottom_toBottomOf="@+id/toDatetxt"
                app:layout_constraintLeft_toRightOf="@+id/toDatetxt"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                android:padding="5dp"
                android:id="@+id/todatebtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textStyle="bold"
                android:textColor="@color/mygrey"
                android:textSize="16sp"
                android:id="@+id/toTimetxt"
                app:layout_constraintTop_toBottomOf="@id/totxt"
                app:layout_constraintLeft_toRightOf="@+id/todatebtn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/toTimetxt"
                app:layout_constraintBottom_toBottomOf="@+id/toTimetxt"
                app:layout_constraintLeft_toRightOf="@+id/toTimetxt"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_time_24"
                android:padding="5dp"
                android:id="@+id/toTimeBtn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondary_maincolor"
                android:textColor="#FF0000"
                app:layout_constraintTop_toBottomOf="@id/toDatetxt"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Add Questions"
                android:textAllCaps="false"
                android:id="@+id/addQbtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions Added : "
                app:layout_constraintTop_toTopOf="@id/addQbtn"
                app:layout_constraintBottom_toBottomOf="@id/addQbtn"
                app:layout_constraintLeft_toRightOf="@id/addQbtn"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/number_of_questions_added"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Quiz"
                android:backgroundTint="@color/maincolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/create_quiz_btn"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>